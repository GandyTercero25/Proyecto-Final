@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="btn btn-outline-light w-100 mb-2" asp-area="" asp-controller="Account" asp-action="Profile">Perfil</a>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-light w-100 text-primary">Cerrar sesión</button>
    </form>
}
else
{
    <a class="btn btn-outline-light w-100 mb-2" asp-area="" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
    <a class="btn btn-light w-100 text-primary fw-semibold" asp-area="" asp-controller="Account" asp-action="Register">Registrarse</a>
}

