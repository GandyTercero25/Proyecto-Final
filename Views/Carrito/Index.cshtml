@model ECommerceArtesanos.Models.Carrito

@{
    ViewData["Title"] = "Carrito de Compras";
    decimal total = 0;
}

<h2>🛒 Tu carrito</h2>

<p>
    <a href="@Url.Action("Index", "Productos")" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Seguir comprando
    </a>
</p>

@if (Model.Items == null || !Model.Items.Any())
{
    <p>No hay productos en tu carrito.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                var precio = item.Producto?.Precio ?? 0;
                var subtotal = item.Cantidad * precio;
                total += subtotal;
                <tr>
                    <td>@item.Producto?.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>@precio.ToString("C")</td>
                    <td>@subtotal.ToString("C")</td>
                    <td>
                        <form asp-action="Eliminar" asp-route-carritoItemId="@item.CarritoItemId" method="post">
                            <button class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3" class="text-end fw-bold">Total:</td>
                <td class="fw-bold">@total.ToString("C")</td>
                <td></td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Vaciar" method="post" class="text-end mt-3">
        <button type="submit" class="btn btn-outline-danger">🧹 Vaciar carrito</button>
    </form>
}
