@model ECommerceArtesanos.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1>Eliminar Producto</h1>

<h3>¿Estás seguro de que quieres eliminar este producto?</h3>

<div>
    <h4>@Model.Nombre</h4>
    <p>@Model.Descripcion</p>
    <p>Precio: @Model.Precio</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Productos")" class="btn btn-secondary">Cancelar</a>
</form>
